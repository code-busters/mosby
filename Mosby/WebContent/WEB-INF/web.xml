<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Mosby</display-name>
  <welcome-file-list>
    <welcome-file>index</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>SessionFilter</filter-name>
    <filter-class>main.java.com.mosby.view.web.filters.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>main.java.com.mosby.view.web.filters.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>SignUpFilter</filter-name>
    <filter-class>main.java.com.mosby.view.web.filters.user.SignUpFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SignUpFilter</filter-name>
    <url-pattern>/signUp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>main.java.com.mosby.view.web.filters.user.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/login</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>ProfilePageFilter</filter-name>
    <filter-class>main.java.com.mosby.view.web.filters.user.ProfilePageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ProfilePageFilter</filter-name>
    <url-pattern>/register</url-pattern>
    <url-pattern>/apiAccess</url-pattern>
    <url-pattern>/createEvent</url-pattern>
    <url-pattern>/createOrganizer</url-pattern>
    <url-pattern>/changePassword</url-pattern>
    <url-pattern>/contactInfo</url-pattern>
    <url-pattern>/myOrganizers</url-pattern>
    <url-pattern>/myEvents</url-pattern>
    <url-pattern>/updateOrganizer</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>EventAttributesFilter</filter-name>
    <filter-class>main.java.com.mosby.view.web.filters.event.EventAttributesFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EventAttributesFilter</filter-name>
    <url-pattern>/createEvent</url-pattern>
    <url-pattern>/updateEvent</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CreateEventFilter</filter-name>
    <filter-class>main.java.com.mosby.view.web.filters.event.CreateEventFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CreateEventFilter</filter-name>
    <url-pattern>/createEvent</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CreatePromoCodeFilter</filter-name>
    <filter-class>main.java.com.mosby.view.web.filters.event.CreatePromoCodeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CreatePromoCodeFilter</filter-name>
    <url-pattern>/createEvent</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>ContactInfoFilter</filter-name>
    <filter-class>main.java.com.mosby.view.web.filters.user.ContactInfoFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ContactInfoFilter</filter-name>
    <url-pattern>/contactInfo</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>ChangePasswordFilter</filter-name>
    <filter-class>main.java.com.mosby.view.web.filters.user.ChangePasswordFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ChangePasswordFilter</filter-name>
    <url-pattern>/changePassword</url-pattern>
  </filter-mapping>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error</location>
  </error-page>
  <security-constraint>
    <display-name>Restrict direct access to certain folders</display-name>
    <web-resource-collection>
      <web-resource-name>Restricted folders</web-resource-name>
      <url-pattern>/pages/*</url-pattern>
    </web-resource-collection>
    <auth-constraint/>
  </security-constraint>
  <resource-ref>
    <description>Mosby Datasource</description>
    <res-ref-name>jdbc/onlinedb</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
</web-app>